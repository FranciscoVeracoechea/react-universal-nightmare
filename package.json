{
  "name": "react-universal-nightmare",
  "version": "0.1.0",
  "description": "Quick start for a Full Stack Javascript Application with server side rendering using: react, redux, react-router, react-helmet, express, webpack etc..",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "export NODE_ENV=production export BABEL_ENV=production && node -r @babel/register node_modules/.bin/webpack --json > compilationStats.json --progress --display-modules --config webpack/webpack.client.js",
    "build-server": "export NODE_ENV=production export BABEL_ENV=production && node -r @babel/register node_modules/.bin/webpack --progress --config webpack/webpack.server.js",
    "clean": "rimraf dist/ && rimraf public",
    "lint": "eslint src",
    "postmerge": "npm install",
    "postrewrite": "npm install",
    "precommit": "npm run lint",
    "prepush": "npm run test",
    "start": "npm run clean & export NODE_ENV=development export BABEL_ENV=development && babel-node src/server",
    "start-analyzer": "npm run clean && export NODE_ENV=development export BABEL_ENV=development ANALYZER=true && babel-node src/server",
    "start-production": "npm run build && export NODE_ENV=production export BABEL_ENV=production && babel-node src/server",
    "test": "echo \"Error: no test specified\"",
    "watch-client": "webpack --watch --config webpack/webpack.client.js",
    "watch-server": "webpack --watch --config webpack/webpack.server.js"
  },
  "keywords": [],
  "author": "Francisco Veracoechea <veracoecheafrancisco@gmail.com>",
  "license": "MIT",
