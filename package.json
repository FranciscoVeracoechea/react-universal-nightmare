{
  "name": "react-universal-nightmare",
  "version": "0.1.0",
  "description": "Quick start for a Full Stack Javascript Application with server side rendering using: react, redux, react-router, react-helmet, express, webpack etc..",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build-client && npm run build-server",
    "production": "npm run build && NODE_ENV=production BABEL_ENV=production babel-node src/server",
    "build-client": "NODE_ENV=production BABEL_ENV=production node -r @babel/register node_modules/.bin/webpack --progress --display-modules --config webpack/webpack.client.js --json > compilationStats.json",
    "build-server": "NODE_ENV=production BABEL_ENV=production node -r @babel/register node_modules/.bin/webpack --progress --config webpack/webpack.server.js && npm run delete",
    "clean": "rimraf dist/ && rimraf public",
    "lint": "eslint src",
    "postmerge": "npm install",
    "postrewrite": "npm install",
    "precommit": "npm run lint",
    "prepush": "npm run test",
    "start": "npm run clean & NODE_ENV=development BABEL_ENV=development babel-node src/server",
    "analyzer": "npm run clean && NODE_ENV=development BABEL_ENV=development ANALYZER=true babel-node src/server",
    "test": "echo \"Error: no test specified\"",
    "watch-client": "webpack --watch --config webpack/webpack.client.js",
    "watch-server": "webpack --watch --config webpack/webpack.server.js",
    "delete": "rimraf dist/images & rimraf dist/*.css & rimraf dist/*.gz",
    "create-secret": "babel-node ./src/server/commands/CreateSecret"
  },
  "repository": "https://github.com/FranciscoVeracoechea/react-universal-nightmare",
  "keywords": [],
  "author": "Francisco Veracoechea <veracoecheafrancisco@gmail.com>",
  "license": "MIT",
